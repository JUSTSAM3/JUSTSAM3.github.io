---
type Option = { key:string; value:string }

interface Props {
    status: Option 
    id:string;
    email_label?: Option ;
    email_url?: Option ;
    github_label?: Option ;
    github_url?: Option ;
    yt_label?: Option ;
    yt_url?: Option ;
}

const { 
    status, 
    email_label, 
    email_url, 
    github_label, 
    github_url, 
    yt_label, 
    yt_url,
    id 
} = Astro.props as Props
---

<footer
    id={id}
    class="my-24 border-t pt-8 text-sm grid grid-cols-1 gap-3 place-items-center"
>
    <div>
        <span
            class="inline-block w-2 h-2 rounded-full bg-green-500 mr-2 animate-pulse"
        ></span>
        <span class="opacity-70 uppercase">{status.value}</span>
        <span
            class="inline-block w-2 h-2 rounded-full bg-green-500 ml-2 animate-pulse"
        ></span>
    </div>
    <div class="flex gap-4 [&_a]:opacity-70 [&_a]:hover:opacity-100 [&_a]:transition-colors [&_a]:duration-200">
        {email_url && email_label && (
            <a href={email_url.value}>
                {email_label.value}
            </a>
        )}
        
        {github_url && github_label && (
            <a href={github_url.value} rel="nofollow" target="_blank">
                {github_label.value}
            </a>
        )}

        {yt_url && yt_label && (
            <a href={yt_url.value} rel="nofollow" target="_blank">
                {yt_label.value}
            </a>
        )}
    </div>
</footer>